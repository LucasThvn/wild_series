{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <section>
        <h1>Saison {{ season.number }} de {{ program.title }}</h1>
        <hr>
        <p>{{ season.description }}</p>
        <div class="p-3">
            <h2>Liste des épisodes :</h2>
            <ul>
                {% for episode in episodes %}
                    <li>
                        <a href="#">Épisode {{ episode.number }} : {{ episode.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock %}